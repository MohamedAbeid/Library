        box-shadow: 0 6px 16px rgba(15,23,42,0.06)
    }

        .book-info h2 {
            margin-bottom: 12px;
            font-size: 28px
        }

        .book-info p {
            margin-bottom: 12px;
            color: var(--muted);
            font-size: 16px
        }

    .book-actions {
        margin-top: 20px;
        display: flex;
        gap: 12px
    }

    .btn {
        padding: 12px 20px;
        border-radius: 12px;
        font-weight: 700;
        border: none;
        cursor: pointer
    }

    .btn-borrow {
