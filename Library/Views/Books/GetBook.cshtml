<style>
    .content {
        padding: 24px;
        flex: 1;
        overflow-y: auto
    }

    .book-detail {
        display: flex;
        gap: 24px;
        flex-wrap: wrap
    }

    .book-cover {
        flex: 1;
        min-width: 280px;
        max-width: 360px;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 6px 16px rgba(15,23,42,0.06);
        background: linear-gradient(135deg,var(--primary),#2b476a);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 32px;
        font-weight: 700;
        height: 480px
    }

    .book-info {
        flex: 2;
