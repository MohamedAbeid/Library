@model List<Authors>
@{
    ViewData["Title"] = "Categories";
    Layout = "_DashBoard";

}

<h1>Authors</h1>

<a asp-action="Create" asp-controller="Authors" class="btn btn-success mb-3">Add New Author</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var authors in Model)
        {
            <tr>
                <td>@authors.Name</td>
                <td><a asp-action="Edit" asp-controller="Authors" asp-route-id="@authors.Id" class="btn btn-primary">Edit</a></td>
                <td>
                    <form asp-action="Delete" asp-controller="Authors" asp-route-id="@authors.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>