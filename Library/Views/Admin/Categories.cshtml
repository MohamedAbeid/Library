@model List<Categories>
@{
    ViewData["Title"] = "Categories";
    Layout = "_DashBoard";

}

<h1>Categories</h1>

<a asp-action="Create" asp-controller="Categories" class="btn btn-success mb-3">Add New Category</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td><a asp-action="Edit" asp-controller="Categories" asp-route-id="@category.Id" class="btn btn-primary">Edit</a></td>
                <td>
                    <form asp-action="Delete" asp-controller="Categories"  asp-route-id="@category.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>                
        }
    </tbody>
</table>