@model List<BooksViewModel>

@{
    ViewData["Title"] = "Books";
    Layout = "_DashBoard";
}

<h1>Books</h1>

<a asp-action="Create" asp-controller="Books" class="btn btn-success mb-3">Add New Book</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Category</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.AuthorName</td>
                <td>@book.CategoryName</td>
                <td><a asp-action="Edit" asp-controller="Books" asp-route-id="@book.Id" class="btn btn-primary">Edit</a></td>
                <td>
                    <form asp-action="Delete" asp-controller="Books"  asp-route-id="@book.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this book?');">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
            </tr>
                
                   
        }

    </tbody>

</table>

